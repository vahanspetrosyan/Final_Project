<Window x:Class="Book.BookHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book"
        mc:Ignorable="d"
        Title="BookHistory" Height="299.761" Width="713.397" Loaded="Window_Loaded">
    <Grid>
        <ListView x:Name="BookHistoryList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="Book name" DisplayMemberBinding="{Binding BookName}"/>
                    <GridViewColumn Width="100" Header="First Name" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Width="100" Header="Last Name" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Width="190" Header="Given?" DisplayMemberBinding="{Binding Given}"/>
                    <GridViewColumn Width="190" Header="Returned?" DisplayMemberBinding="{Binding Returned}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
